@model IEnumerable<ComicBookTracker.Models.Series>

@{ ViewData["Title"] = "Series"; }


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Volume)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Author)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Publisher)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
<tr>
    <td>
        <a asp-controller="Issue" asp-action="Index" asp-route-seriesId="@item.Id">
            @item.ToString()            
        </a>
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Volume)
    </td>
    <td>
        <a asp-controller="Issue" asp-action="Index" asp-route-authorId="@item.AuthorId">
            @Html.DisplayFor(modelItem => item.Author.Name)
        </a>
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Publisher.Name)
    </td>
    <td>
        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
    </td>
</tr>}
        </tbody>
    </table>
</body>
</html>
